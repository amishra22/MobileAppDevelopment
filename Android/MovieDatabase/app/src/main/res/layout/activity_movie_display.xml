<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.asu.msse.amishr22.moviedesciption.MainActivity"
    tools:showIn="@layout/activity_main">
    <!-- app:layout_behavior="@string/appbar_scrolling_view_behavior" -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Title"
        android:id="@+id/textTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_____"
        android:id="@+id/textMTitle"
        android:layout_alignBottom="@+id/textTitle"
        android:layout_alignLeft="@+id/textDescription"
        android:layout_alignStart="@+id/textDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Year"
        android:id="@+id/textYear"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_____"
        android:id="@+id/textMYear"
        android:layout_alignBottom="@+id/textYear"
        android:layout_alignLeft="@+id/textMTitle"
        android:layout_alignStart="@+id/textMTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rated"
        android:id="@+id/textRated"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textYear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_____"
        android:id="@+id/textMRated"
        android:layout_alignTop="@+id/textRated"
        android:layout_alignLeft="@+id/textMYear"
        android:layout_alignStart="@+id/textMYear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Genre"
        android:id="@+id/textGenre"
        android:textStyle="bold"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textRated"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_____"
        android:id="@+id/textMGenre"
        android:layout_alignBottom="@+id/textGenre"
        android:layout_alignLeft="@+id/textMRated"
        android:layout_alignStart="@+id/textMRated" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Released"
        android:id="@+id/textReleased"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textGenre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_____"
        android:id="@+id/textMReleased"
        android:layout_alignBottom="@+id/textReleased"
        android:layout_alignLeft="@+id/textMGenre"
        android:layout_alignStart="@+id/textMGenre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Runtime"
        android:id="@+id/textRuntime"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textReleased"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_____"
        android:id="@+id/textMRuntime"
        android:layout_alignBottom="@+id/textRuntime"
        android:layout_alignLeft="@+id/textMReleased"
        android:layout_alignStart="@+id/textMReleased" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Actors"
        android:id="@+id/textActors"
        android:textStyle="bold"
        android:layout_below="@+id/textRuntime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_____"
        android:id="@+id/textMActors"
        android:layout_alignBottom="@+id/textActors"
        android:layout_alignLeft="@+id/textMRuntime"
        android:layout_alignStart="@+id/textMRuntime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Plot"
        android:id="@+id/textPlot"
        android:textStyle="bold"
        android:layout_below="@+id/textActors"
        android:layout_alignRight="@+id/textTitle"
        android:layout_alignEnd="@+id/textTitle"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_____"
        android:id="@+id/textMPlot"
        android:layout_alignTop="@+id/textPlot"
        android:layout_alignLeft="@+id/textMActors"
        android:layout_alignStart="@+id/textMActors" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Movie Description"
        android:id="@+id/textDescription"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addDesc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="removeMovie" />


</RelativeLayout>
